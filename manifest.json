{
  "manifest_version": 3,
  "name": "Steam Inventory Sell Assistant",
  "version": "1.0.0",
  "description": "Парсинг інвентарю, перевірка цін, історія BUY/SELL та виставлення предметів на продаж.",
  "action": {
    "default_title": "Open Inventory Sell Assistant"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "cookies",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://steamcommunity.com/*"
  ]
}
